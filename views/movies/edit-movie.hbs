<div class="container">
    <h2>Edit Movie</h2>
    <form action="/movies/{{movie._id}}" method="post">
        <label> Title:
            <input type="text" name="title" value={{movie.title}}/>
        </label><br>
        <label> Genre:
            <input type="text" name="genre" value={{movie.genre}}/>
        </label><br>
        <label> Plot:
            <textarea name="plot" cols="30" rows="10">{{movie.plot}}</textarea>
        </label><br>
        <label for="cast">Cast:</label>
            <select name="cast" multiple>
                {{#each celebrities}}
                    <option>{{name}}</option>
                {{/each}}
            </select>
        <button type="submit"> Update Movie </button>
    </form>
    <a href="/">Back to Homepage</a>
    <a href="/movies">List of Movies</a>
</div>